{
    "name": "@webtui/css",
    "version": "0.1.4",
    "type": "module",
    "scripts": {
        "dev": "vite build --watch",
        "build": "rm -rf dist && vite build",
        "clean": "rm -rf dist .turbo node_modules",
        "format": "prettier --write 'src/**/*.css' 'vite.config.ts' 'README.md'",
        "format:check": "prettier --check 'src/**/*.css' 'vite.config.ts' 'README.md'",
        "prepublishOnly": "bun run build"
    },
    "files": [
        "dist"
    ],
    "exports": {
        ".": "./dist/full.css",
        "./*": "./dist/*"
    },
    "devDependencies": {
        "glob": "^11.0.1",
        "vite": "^6.2.0"
    }
}
